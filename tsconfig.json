{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,

    // enables typescript to parse react
    "jsx": "react",

    // enables functions such as Object.entries
    "lib": ["es2018", "es6", "dom"],
    "moduleResolution": "node",

    // needed to recognize import keyword
    "esModuleInterop": true,

    // allow imports without *
    "allowSyntheticDefaultImports": true,
    // needed for "paths" option to work
    "baseUrl": ".",
    // alias long file imports
    "paths": {
      // "@apricot": ["./client/app/components/apricot"],
      // "@apricot/*": ["./client/app/components/apricot/*"],
      // "@components/*": ["./client/app/components/*"],
      // "@components": ["./client/app/components"],
      // "@actions/*": ["./client/app/actions/*"],
      // "@reducers": ["./client/app/Redux/Reducers"],
      // "@reducers/*": ["./client/app/Redux/Reducers/*"],
      // "@constants/*": ["./client/app/constants/*"],
      "@pages/*": ["./client/app/components/pages/*"],
      "@routes": ["./client/app/routers/Routes"],
      "@helpers": ["./client/app/helpers"],
      "@helpers/*": ["./client/app/helpers/*"]
      // "@interfaces": ["./client/app/interfaces"],
      // "@interfaces/*": ["./client/app/interfaces/*"],
      // "@redux": ["./client/app/Redux"],
      // "@redux/*": ["./client/app/Redux/*"],
      // "@definitions": ["./client/app/Definitions"]
    }
  },
  "exclude": ["node_modules"]
}

